{
  "version": "1.4",
  "updated": "2025-12-02T00:00:00Z",
  "project": "A.B.E. — American Butterfly Effect",
  "author": {
    "name": "Terra Shouse",
    "contact": "terra610",
    "license": "CC BY-NC 4.0"
  },

  "modules": {
    "cae": {
      "name": "CAE",
      "long_name": "Constitutional Alignment Engine",
      "purpose": "Parses constitutional text and positive law; flags misalignment and cites controlling authority.",
      "model_file": "cae/model.json",
      "schema_file": "cae/schema.json",
      "report_file": "cae/report.csv",
      "status": "planned",
      "ui": "cae/index.html"
    },

    "cda": {
      "name": "CDA",
      "long_name": "Constitutional Divergence Analyzer",
      "purpose": "Turns statutes and enforcement practices into structured divergence flags and a 0–1 score consumable by CDI, CIRI, CFF, and AFFE.",
      "model_file": "cda/model.json",
      "schema_file": "cda/schema.json",
      "status": "alpha",
      "ui": "cda/index.html"
    },

    "cdi": {
      "name": "CDI",
      "long_name": "Constitutional Divergence Index",
      "purpose": "Converts CAE/CDA findings into normalized 0–1 divergence signals by domain and jurisdiction.",
      "inputs": ["cae/report.csv", "cda/scenarios.json"],
      "model_file": "cdi/model.json",
      "data_file": "cdi/divergence.csv",
      "status": "alpha",
      "ui": "cdi/index.html"
    },

    "ciri": {
      "name": "CIRI",
      "long_name": "Constitutional Integrity ROI Engine",
      "purpose": "Quantifies recoverable economic value from ending unconstitutional harm and restoring lawful practice.",
      "inputs_file": "ciri/inputs.csv",
      "logic_spec": "ciri/calc.md",
      "core_outputs": [
        "direct_case",
        "detention",
        "enforcement",
        "market_access",
        "employment",
        "litigation",
        "transition",
        "total_recovery",
        "CIRI",
        "CII",
        "ROI_per_case"
      ],
      "primary_output_field": "total_recovery",
      "status": "mvp",
      "ui": "ciri/index.html"
    },

    "cibs": {
      "name": "CIBS",
      "long_name": "Community Integrity Budget System",
      "purpose": "Allocates the Recovery Pool into public reinvestment categories with transparent percentages and auditability.",
      "template_file": "cibs/budget_template.csv",
      "auto_budget_file": "cibs/auto_budget.csv",
      "status": "mvp",
      "ui": "cibs/index.html"
    },

    "cii": {
      "name": "CII",
      "long_name": "Community Investment Interface",
      "purpose": "Publishes auditable project portfolios (housing, clinics, food, mobility, workforce) and KPIs tied to CIBS.",
      "model_file": "cii/model.json",
      "portfolio_file": "cii/portfolio.csv",
      "status": "mvp",
      "ui": "cii/index.html"
    },

    "cff": {
      "name": "CFF",
      "long_name": "Constitutional Funding Forensics",
      "purpose": "Classifies line-item spending as ON_MISSION, OFF_MISSION, or UNCLEAR relative to statutory authority and program rules.",
      "inputs_file": "cff/inputs.csv",
      "schema_file": "cff/schema.json",
      "model_file": "cff/model.json",
      "status": "alpha",
      "ui": "cff/index.html"
    },

    "law": {
     "name": "Federal Authority Corpus",
     "long_name": "Lawful Scope & Authority Map",
     "purpose": "Defines constitutional and statutory boundaries (USC/CFR/funding) that CAE, CDA, CFF, and CIRI use to detect misalignment.",
     "model_file": "law/law_schema.json",
     "ui": "law/index.html",
     "status": "seed"
    },

    "affe": {
      "name": "AFFE",
      "long_name": "American Funding & Fidelity Explorer",
      "purpose": "Explores funding patterns, off-mission drift, and long-run recovery scenarios across agencies and programs.",
      "model_file": "affe/model.json",
      "ui": "affe/index.html",
      "status": "preview"
    },

    "ccri": {
      "name": "CCRI",
      "long_name": "Consumer Credit Risk Integrity",
      "purpose": "Evaluates how credit, banking, and auto lending use lawful vs. unlawful data (DMV/DOT spillover) and how that shapes access to vehicles and credit.",
      "inputs_file": "ccri/inputs.json",
      "schema_file": "ccri/schema.json",
      "model_file": "ccri/model.json",
      "status": "alpha",
      "ui": "ccri/index.html"
    },

    "intake": {
      "name": "Intake",
      "long_name": "Document Intake + OCR Bridge",
      "purpose": "Turns user-uploaded documents (tickets, CPS files, loan contracts, policy memos) into normalized text and structured fields consumable by CIRI, CDA, CFF, and CCRI.",
      "model_file": "intake/model.json",
      "schema_file": "intake/schema.json",
      "status": "design/alpha",
      "ui": "intake/index.html"
    },

    "integration": {
      "name": "Integration Layer",
      "purpose": "Verifies receipts, matches recipients, detects retaliation/suppression, and posts public attestations. Recomputes key KPIs and SHA-256 hashes for all major artifacts.",
      "checks": [
        "receipt_verification",
        "recipient_match",
        "retaliation_zero",
        "public_audit_attestation",
        "hash_consistency"
      ],
      "status": "alpha",
      "ui": "integration/index.html"
    },

    "system": {
      "name": "System Map",
      "purpose": "Canonical chain-of-custody and evidence ledger for A.B.E.",
      "map_file": "system/map.json",
      "status": "mvp",
      "ui": "system/index.html"
    },

    "macro": {
      "name": "Macro",
      "long_name": "Macroeconomic Cascade",
      "purpose": "Summarizes top-down impact from many restored communities; optional model artifacts and downloads.",
      "model_file": "macro/model.json",
      "downloads": [
        "macro/macro_cascade.csv",
        "macro/ABE_MacroCascadeModel.json"
      ],
      "status": "public",
      "ui": "macro/index.html"
    },

    "learn": {
      "name": "Learn",
      "long_name": "Guided Engine Tips",
      "purpose": "Interactive mini-examples that teach how CIRI, CIBS, and Macro work using doctrine-aligned numbers.",
      "ui": "learn/index.html",
      "status": "public"
    }
  },

  "flows": [
    {
      "from": "Uploaded document (PDF/image/text via Intake UI)",
      "to": "intake/intake_artifact.json",
      "control": "local_OCR_normalization_and_hashing",
      "evidence": [
        "/abe---flag/intake/index.html",
        "/abe---flag/intake/model.json",
        "/abe---flag/intake/schema.json"
      ]
    },
    {
      "from": "intake/intake_artifact.json",
      "to": "ciri/inputs.csv",
      "control": "field_mapping_into_CIRI_template",
      "evidence": [
        "/abe---flag/ciri/index.html",
        "/abe---flag/ciri/calc.md",
        "/abe---flag/ciri/inputs.csv"
      ]
    },
    {
      "from": "intake/intake_artifact.json",
      "to": "cda/scenarios.json",
      "control": "extracted_statutes_and_practices_projected_into_CDA",
      "evidence": [
        "/abe---flag/cda/index.html",
        "/abe---flag/cda/model.json",
        "/abe---flag/cda/schema.json"
      ]
    },
    {
      "from": "intake/intake_artifact.json",
      "to": "cff/inputs.csv",
      "control": "funding_line_items_classified_for_CFF_when_present",
      "evidence": [
        "/abe---flag/cff/index.html",
        "/abe---flag/cff/model.json",
        "/abe---flag/cff/schema.json",
        "/abe---flag/cff/inputs.csv"
      ]
    },
    {
      "from": "intake/intake_artifact.json",
      "to": "ccri/inputs.json",
      "control": "credit_and_lending_fields_mapped_into_CCRI_scenarios",
      "evidence": [
        "/abe---flag/ccri/index.html",
        "/abe---flag/ccri/model.json",
        "/abe---flag/ccri/schema.json",
        "/abe---flag/ccri/inputs.json"
      ]
    },
    {
      "from": "Public law & corpus (Constitution, US Code, CFR, state law, precedent)",
      "to": "cae/report.csv",
      "control": "source_text_cited_and_hashed",
      "evidence": [
        "/abe---flag/cae/index.html",
        "/abe---flag/cae/model.json",
        "/abe---flag/cae/schema.json"
      ]
    },
    {
      "from": "Statutes + enforcement practices (from Intake, policy memos, tickets)",
      "to": "cda/scenarios.json",
      "control": "practice_vs_authority_divergence_encoded",
      "evidence": [
        "/abe---flag/cda/index.html"
      ]
    },
    {
      "from": "cae/report.csv + cda/scenarios.json",
      "to": "cdi/divergence.csv",
      "control": "normalization_0_1_with_weights",
      "evidence": [
        "/abe---flag/cdi/index.html",
        "/abe---flag/cdi/model.json"
      ]
    },
    {
      "from": "ciri/inputs.csv",
      "to": "CIRI KPIs on ciri/index.html",
      "control": "reproducible_browser_math_and_CLI_parity",
      "evidence": [
        "/abe---flag/ciri/index.html",
        "/abe---flag/ciri/calc.md",
        "/abe---flag/ciri/inputs.csv"
      ]
    },
    {
      "from": "CDI divergence + local inputs (including Intake-derived rows)",
      "to": "CIRI total_recovery (Recovery Pool)",
      "control": "documented_formulas_SIRF_IRE_CEQ",
      "evidence": [
        "/abe---flag/macro/model.html",
        "DOI:10.5281/zenodo.17586107"
      ]
    },
    {
      "from": "CIRI total_recovery",
      "to": "cibs/auto_budget.csv",
      "control": "allocation_rules_applied",
      "evidence": [
        "/abe---flag/cibs/index.html",
        "/abe---flag/cibs/auto_budget.csv",
        "/abe---flag/cibs/budget_template.csv"
      ]
    },
    {
      "from": "cibs/auto_budget.csv",
      "to": "cii/portfolio.csv",
      "control": "portfolio_alignment_with_budget_and_category_schema",
      "evidence": [
        "/abe---flag/cii/index.html",
        "/abe---flag/cii/portfolio.csv",
        "/abe---flag/cii/model.json"
      ]
    },
    {
      "from": "cff/inputs.csv",
      "to": "AFFE explorer views",
      "control": "ON_MISSION_OFF_MISSION_UNCLEAR_classification_applied",
      "evidence": [
        "/abe---flag/affe/index.html",
        "/abe---flag/cff/index.html"
      ]
    },
    {
      "from": "cii portfolio & disbursements + CFF/AFFE outputs",
      "to": "Integration checks",
      "control": "receipts_signed_hashes_retaliation_monitoring",
      "evidence": [
        "/abe---flag/integration/index.html",
        "/abe---flag/system/integrity.js",
        "/abe---flag/system/divergence.js"
      ]
    },
    {
      "from": "Integration checks",
      "to": "Public dashboard / publication",
      "control": "public_audit_attestation_with_SHA256",
      "evidence": [
        "/abe---flag/system/index.html",
        "/abe---flag/system/map.json",
        "CC BY-NC 4.0",
        "SHA256: to_be_added_for_released_artifacts"
      ]
    }
  ],

