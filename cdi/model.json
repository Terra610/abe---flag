{
  "version": "1.0",
  "about": "CDI — Constitutional Divergence Index model (signals, weights, normalization).",
  "signals": [
    { "key": "stops_per_1k",        "name": "Stops per 1k residents",             "direction": "higher=worse", "scale": "minmax", "weight": 0.20 },
    { "key": "charge_mix",          "name": "Charge mix (nonviolent %)",          "direction": "higher=worse", "scale": "minmax", "weight": 0.15 },
    { "key": "time_to_counsel",     "name": "Days to counsel",                    "direction": "higher=worse", "scale": "minmax", "weight": 0.15 },
    { "key": "dismissal_rate",      "name": "Case dismissal rate",                "direction": "higher=better","scale": "minmax", "invert": true, "weight": 0.15 },
    { "key": "pretext_ratio",       "name": "Pretext stop ratio",                 "direction": "higher=worse", "scale": "minmax", "weight": 0.20 },
    { "key": "budget_divergence",   "name": "Budget divergence from CIBS guard",  "direction": "higher=worse", "scale": "minmax", "weight": 0.15 }
  ],
  "combine": {
    "method": "logistic",
    "beta0": 0.0,
    "note": "delta = σ(beta0 + Σ w_i * (2*z_i - 1)) where z_i ∈ [0,1]"
  },
  "sources": {
    "csv": "./divergence.csv",
    "required_headers": ["category","signal_key","value","z_norm","confidence"]
  }
}
