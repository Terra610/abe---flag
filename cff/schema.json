{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "A.B.E. CFF Inputs Schema",
  "description": "Constitutional Funding Forensics line-item dataset",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["program_name","federal_authority_citation","fiscal_year","state_or_jurisdiction","agency","line_item_description","spend_category_code","amount_usd"],
    "properties": {
      "program_name": { "type": "string" },
      "federal_authority_citation": { "type": "string" },
      "fiscal_year": { "type": ["string","integer"] },
      "state_or_jurisdiction": { "type": "string" },
      "agency": { "type": "string" },
      "line_item_description": { "type": "string" },
      "spend_category_code": { "type": "string", "enum": ["ON_MISSION","OFF_MISSION","UNCLEAR"] },
      "amount_usd": { "type": ["number","string"] },
      "notes": { "type": ["string","null"] }
    }
  }
}
