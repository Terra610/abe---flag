{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ABE_LawAuthorityCorpus_v1",
  "description": "Schema for law authority entries used by A.B.E. (Constitution, statutes, regulations, funding rules, and key memoranda).",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "module", "entries"],
  "properties": {
    "version": {
      "type": "string",
      "const": "1.0"
    },
    "module": {
      "type": "string",
      "const": "LAW"
    },
    "source": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string" },
        "license": { "type": "string" },
        "notes": { "type": "string" }
      }
    },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "type", "jurisdiction", "citation", "title", "scope_tags"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Stable identifier used by CDA/CFF/etc (e.g., 'fmcsr_390_3_applicability')."
          },
          "type": {
            "type": "string",
            "enum": [
              "constitution",
              "statute",
              "regulation",
              "funding_program",
              "memorandum",
              "guidance"
            ]
          },
          "jurisdiction": {
            "type": "string",
            "enum": [
              "federal",
              "state",
              "multi",
              "unknown"
            ]
          },
          "citation": {
            "type": "string",
            "description": "Short legal citation, e.g., '49 CFR 390.3', '49 USC 31136', '23 USC 402'."
          },
          "title": {
            "type": "string",
            "description": "Human-readable title."
          },
          "summary": {
            "type": "string",
            "description": "Short summary of what this authority actually does or limits."
          },
          "full_text_available": {
            "type": "boolean",
            "description": "Whether the full text is embedded here or must be looked up externally.",
            "default": false
          },
          "full_text_ref": {
            "type": "string",
            "description": "Optional link or reference to full text (e.g., URL, PDF filename, or external citation)."
          },

          "scope_tags": {
            "type": "array",
            "description": "Tags the engine can use to quickly filter by scope.",
            "items": {
              "type": "string",
              "enum": [
                "commercial_driver",
                "noncommercial_driver",
                "vehicle_registration",
                "cmv_only",
                "funding_conditions",
                "preemption",
                "enforcement_limits",
                "right_to_travel",
                "criminal_process",
                "civil_remedy",
                "funding_mcsap",
                "funding_highway_safety",
                "funding_fmcsr",
                "dmv_data_use",
                "credit_use",
                "cps_case",
                "child_welfare",
                "general_state_police_power"
              ]
            }
          },

          "on_mission_conditions": {
            "type": "string",
            "description": "Plain-language conditions for when conduct is ON_MISSION (within scope of this authority)."
          },
          "off_mission_signals": {
            "type": "string",
            "description": "Plain-language signals that conduct is OFF_MISSION (beyond scope or misuse)."
          },
          "preemption_strength": {
            "type": "string",
            "enum": ["none", "weak", "moderate", "strong"],
            "description": "How strong the preemptive effect is against conflicting state rules."
          },

          "funding_program": {
            "type": "string",
            "description": "If this entry relates to a funding stream (e.g., 'MCSAP', '23 USC 402'), name it here."
          },
          "funding_on_mission_example": {
            "type": "string",
            "description": "Example of clearly on-mission funding use."
          },
          "funding_off_mission_example": {
            "type": "string",
            "description": "Example of clearly off-mission or fraudulent use."
          },

          "notes_for_engine": {
            "type": "string",
            "description": "Implementation notes for CDA/CFF/CCRI (e.g., how to map flags to this authority)."
          }
        }
      }
    }
  }
}
