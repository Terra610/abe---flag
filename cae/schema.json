{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CAE Model",
  "type": "object",
  "required": ["version", "updated", "authority", "weights", "clauses"],
  "properties": {
    "version": { "type": "string" },
    "updated": { "type": "string", "format": "date-time" },
    "authority": {
      "type": "object",
      "required": ["name", "license", "doi"],
      "properties": {
        "name": { "type": "string" },
        "license": { "type": "string" },
        "doi": { "type": "string" }
      }
    },
    "weights": {
      "type": "object",
      "required": ["clarity_of_scope", "constitutional_nexus", "operational_fidelity"],
      "properties": {
        "clarity_of_scope": { "type": "number", "minimum": 0, "maximum": 1 },
        "constitutional_nexus": { "type": "number", "minimum": 0, "maximum": 1 },
        "operational_fidelity": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },
    "clauses": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "object",
        "required": [
          "clause_id",
          "title",
          "constitutional_anchor",
          "statutes",
          "regulations",
          "intent",
          "scope_notes",
          "alignment_score",
          "confidence",
          "tags",
          "source_hash",
          "evidence_links"
        ],
        "properties": {
          "clause_id": { "type": "string" },
          "title": { "type": "string" },
          "constitutional_anchor": { "type": "string" },
          "statutes": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
          "regulations": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
          "intent": { "type": "string" },
          "scope_notes": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
          "alignment_score": { "type": "number", "minimum": 0, "maximum": 1 },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "tags": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
          "source_hash": {
            "type": "string",
            "pattern": "^sha256:[0-9a-f]{64}$"
          },
          "evidence_links": {
            "type": "array",
            "items": { "type": "string", "format": "uri" },
            "minItems": 1
          }
        }
      }
    }
  }
}                  "description": "Normalized score of constitutional compliance (1.0 = fully faithful)."
                },
                "interpretation": { "type": "string", "description": "Human-readable explanation of the alignment or deviation." },
                "source_hash": { "type": "string", "pattern": "^[A-Fa-f0-9]{64}$", "description": "SHA256 hash of the source text for integrity verification." }
              }
            }
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "required": ["average_alignment", "deviation_count"],
      "properties": {
        "average_alignment": { "type": "number", "minimum": 0, "maximum": 1 },
        "deviation_count": { "type": "integer", "minimum": 0 },
        "notes": { "type": "string" }
      }
    }
  },
  "required": ["version", "updated", "articles", "summary"]
}
